{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "reservation.schema.json",
    "title": "Minimal Scheme for Hall Reservation",
    "description": "Describes a reservation of a hall for an event such as a concert or a match.",
    "$comment": "vesion 1.0.0",
    "$ref": "#/$defs/reservation",
    "$defs": {
        "sport_team": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of the team",
                    "type": "string"
                },
                "coach": {
                    "type": "object",
                    "properties": {
                        "firstname": {
                            "type": "string"
                        },
                        "lastname": {
                            "type": "string"
                        }
                    }
                },
                "nb_players": {
                    "description": "Number of players",
                    "type": "integer",
                    "default": 10
                },
                "sport": {
                    "type": "string",
                    "enum": [
                        "basket",
                        "boxe",
                        "gym",
                        "volley",
                        "football"
                    ]
                }
            },
            "required": [
                "name",
                "sport"
            ]
        },
        "artists": {
            "type": "object",
            "properties": {
                "band_name": {
                    "description": "Name of the artist",
                    "type": "string"
                },
                "nb_members": {
                    "description": "Number of band members",
                    "type": "integer",
                    "default": 1
                },
                "music_type": {
                    "type": "string",
                    "enum": [
                        "jazz",
                        "rock",
                        "pop-rock",
                        "pop",
                        "rap",
                        "r&b",
                        "classic"
                    ]
                }
            },
            "required": [
                "band_name"
            ]
        },
        "match": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "enum": [
                        "championship",
                        "premier league",
                        "friendly"
                    ]
                },
                "rankings": {
                    "description": "Indicates",
                    "type": "string",
                    "enum": [
                        "semi-final",
                        "quarter final",
                        "round of 16",
                        "none"
                    ]
                },
                "teams": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                        "$ref": "#/$defs/sport_team"
                    },
                    "description": "Teams competes"
                }
            },
            "required": [
                "teams"
            ]
        },
        "concert": {
            "type": "object",
            "properties": {
                "artists": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/artists"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "artists"
            ]
        },
        "reservation": {
            "type": "object",
            "properties": {
                "reservationID": {
                    "type": "string",
                    "format": "uuid"
                },
                "event_type": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/match"
                        },
                        {
                            "$ref": "#/$defs/concert"
                        }
                    ]
                },
                "starting_date": {
                    "type": "string",
                    "format": "date"
                },
                "ending_date": {
                    "type": "string",
                    "format": "date"
                },
                "duration": {
                    "type": "string",
                    "description": "hours:minutes:secondes"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "pending",
                        "confirmed",
                        "cancelled"
                    ],
                    "default": "pending"
                },
                "hall": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "description": "Name of the hall",
                            "type": "string"
                        },
                        "address": {
                            "type": "object",
                            "properties": {
                                "street_address": {
                                    "type": "string"
                                },
                                "city": {
                                    "type": "string"
                                },
                                "state": {
                                    "type": "string"
                                },
                                "country": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "street_address",
                                "city",
                                "state",
                                "country"
                            ]
                        },
                        "nb_seat": {
                            "description": "Number of seats in the hall",
                            "type": "integer"
                        },
                        "accessibility": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "metro",
                                    "buses",
                                    "highway"
                                ]
                            },
                            "uniqueItems": true
                        },
                        "highway_id": {
                            "description": "A10 for example",
                            "type": "string"
                        },
                        "metro": {
                            "type": "object",
                            "properties": {
                                "line": {
                                    "description": "Metro 4 for example",
                                    "type": "string"
                                },
                                "stop": {
                                    "description": "Chatelet for example",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "line",
                                "stop"
                            ]
                        },
                        "bus": {
                            "type": "object",
                            "properties": {
                                "line": {
                                    "description": "Line 7 for example",
                                    "type": "string"
                                },
                                "stop": {
                                    "description": "Lieu de Vie for example",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "line",
                                "stop"
                            ]
                        },
                        "parking": {
                            "type": "boolean",
                            "default": false
                        },
                        "parking_spots": {
                            "type": "integer",
                            "minimum": 0
                        }
                    },
                    "required": [
                        "name",
                        "address"
                    ],
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "accessibility": {
                                        "contains": {
                                            "const": "metro"
                                        }
                                    }
                                }
                            },
                            "then": {
                                "required": [
                                    "metro"
                                ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "accessibility": {
                                        "contains": {
                                            "const": "buses"
                                        }
                                    }
                                }
                            },
                            "then": {
                                "required": [
                                    "bus"
                                ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "accessibility": {
                                        "contains": {
                                            "const": "highway"
                                        }
                                    }
                                }
                            },
                            "then": {
                                "required": [
                                    "highway_id"
                                ]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "parking": {
                                        "const": true
                                    }
                                }
                            },
                            "then": {
                                "required": [
                                    "parking_spots"
                                ]
                            }
                        }
                    ]
                }
            },
            "required": [
                "reservationID",
                "event_type",
                "starting_date",
                "ending_date",
                "duration",
                "hall"
            ]
        }
    }
}